<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.ideas.any? %>
      <h3>Ideas (<%= @user.ideas.count %>)</h3>
       <ol class="media-list">
        <%= render @ideas%>
      </ol>
      <%= will_paginate @ideas %>
    <% end %>
  </div>
</div>