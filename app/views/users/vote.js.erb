var $idea = $("li#<%= @idea.id %>");
if (!$idea.length){
  $idea = $(document);
}
$idea.find('.idea-votes').text('<%= pluralize(@idea.vote_count, "Upvote") %>');
$idea.find('.vote-link a').attr('href', '<%= user_unvote_path(:id => current_user.id, :idea_id => @idea.id) %>');
$idea.find('.vote-link a').removeClass("unvoted");
$idea.find('.vote-link a').addClass("voted");
