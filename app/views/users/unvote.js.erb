var $idea = $("li#<%= @idea.id %>"); 
$idea.find('.idea-votes').replaceWith('<span class="idea-votes"><%= pluralize(@idea.vote_count, "Upvote") %>')
$idea.find('.vote-link a').attr('href', '<%= user_vote_path(:id => current_user.id, :idea_id => @idea.id) %>');
$idea.find('.vote-link a').removeClass("voted");
$idea.find('.vote-link a').addClass("unvoted");