<header>
  <div class="navbar navbar-fixed-top navbar-inverse" role="navigation" id="slide-nav">
    <div class="container">
      <div class="navbar-header">
      <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> 
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
     </a>
      <%= link_to image_tag("logo.png", height: '50', width: '195') + "Idea app", root_path, id: "logo", :class => "navbar-brand" %>
    </div>
      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right collapse navbar-collapse">

          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Ideas", ideas_path %></li>
          <li><%= link_to "Challenges", areas_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>