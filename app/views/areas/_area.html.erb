<div class="panel panel-default">
  <% if defined?(area.thumbnail) %>
  <div class="panel-thumbnail">
    <%= image_tag(area.thumbnail(:medium), :class => "img-responsive") %>
  </div>
  <% end %>
  <div class="panel-body">
    <p class="lead"><%= area.title %></p>
    <p><%= area.description %></p>
    <p><a href="<%= area_path(area) %>"><%= area.ideas.count %> Ideas</a> | <a href="<%= submit_path(:area_id => area.id) %>">Submit Idea</a></p>
  </div>
</div>