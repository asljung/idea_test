<div class="panel panel-default" id="<%= comment.id %>">
  <div class="panel-body">
		<div class="media-object pull-left"><%= link_to gravatar_for(comment.user), comment.user %></div>
		<div class="media-body">
    	<span class="comment_content"><%= comment.body %></span>
    	<span class="timestamp">
    	  Posted <%= time_ago_in_words(comment.created_at) %> ago by <%= link_to comment.user.name, comment.user %>.
    	</span>
      <span class="pull-right comment-actions">
      <% if current_user?(comment.user) %>
        <%= link_to "Delete", idea_comment_path(:id => comment.id, :idea_id => comment.commentable_id), method: :delete,
                data: { confirm: "Are you sure you want to delete the comment?" },
                title: "Delete comment?", class: "glyphicon glyphicon-remove" %>
      <% end %>
      </span>
    </div>
  </div>
</div>

