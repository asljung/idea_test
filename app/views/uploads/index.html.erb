<h1>Listing uploads</h1>

    <% @uploads.each do |upload| %>
        <div class="row">
        <%= link_to image_tag(upload.uploaded_file(:thumb), class: 'thumb'), upload.uploaded_file(:original) %>
        <%= link_to 'Edit', edit_upload_path(upload) %>
        <%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>

<br>

<%= link_to 'New Upload', new_upload_path %>
